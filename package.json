{
  "name": "vibe-coder-mcp",
  "version": "1.1.0",
  "description": "Advanced MCP server providing tools for semantic routing, code generation, refactoring, Git integration, workflows, and AI-assisted development.",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "cross-env NODE_ENV=production LOG_LEVEL=info node build/index.js",
    "start:sse": "cross-env NODE_ENV=production LOG_LEVEL=info node build/index.js --sse",
    "dev": "tsc -w & cross-env NODE_ENV=development nodemon build/index.js | pino-pretty",
    "dev:sse": "tsc -w & cross-env NODE_ENV=development nodemon build/index.js --sse | pino-pretty",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "MCP",
    "AI",
    "workflow",
    "Claude",
    "task-manager",
    "project-management",
    "code-generation",
    "refactoring",
    "git",
    "semantic-routing",
    "embeddings",
    "developer-tools"
  ],
  "author": "Vibe Coder MCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "pino": "^9.6.0",
    "simple-git": "^3.22.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@vitest/coverage-v8": "^3.0.9",
    "@xenova/transformers": "^2.17.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.0.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}